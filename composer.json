{
	"name": "pg/http-auth",
	"type": "library",
	"description": "Extension for Nette Framework: set presenters names to secure and they will be secured via http authentification. IAuthenticator service is used for validating user credentials.",
	"keywords": ["security", "http-auth", "extension"],
	"license": ["MIT"],
	"support": {
		"issues": "https://github.com/pavelgajdos/http-auth/issues"
	},
	"authors": [
		{
			"name": "Pavel Janda",
			"homepage": "http://paveljanda.com"
		},
		{
			"name": "Pavel Gajdo≈°",
			"homepage": "http://pavelgajdos.cz"
		}
	],
	"autoload": {
		"psr-4": {
			"PG\\HttpAuth\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"PG\\HttpAuth\\Tests\\": "tests"
		}
	},
	"require": {
		"nette/di"          : "^2.3|^2.4",
		"nette/application" : "^2.3|^2.4",
		"nette/http"        : "^2.3|^2.4",
		"nette/security": "^2.4"
	},
	"require-dev": {
		"nette/tester"              : "~1.7",
		"mockery/mockery"           : "~0.9"
	},
	"minimum-stability": "dev"
}
